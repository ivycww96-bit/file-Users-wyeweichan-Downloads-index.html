  body { font-family: sans-serif; margin:0; background:#fafafa; color:#222; }
  header { padding:16px; background:white; position:sticky; top:0; box-shadow:0 2px 8px rgba(0,0,0,.1); }
  h1 { font-size:18px; margin:0 0 6px; }
  .note { font-size:13px; color:#555; }
  .wrap { max-width:960px; margin:0 auto; padding:16px; }
  .grid { display:grid; grid-template-columns:1fr; gap:16px; }
  @media(min-width:700px){ .grid { grid-template-columns:1fr 1fr; } }
  .card { background:white; border-radius:12px; padding:12px; box-shadow:0 4px 10px rgba(0,0,0,.08); }
  .qnum { font-weight:600; margin-bottom:6px; }
  img { width:100%; border-radius:10px; }
  .input-row { margin-top:8px; display:flex; align-items:center; gap:8px; }
  input[type=text]{ flex:1; padding:8px; border:1.5px solid #ccc; border-radius:8px; }
  input.ok{ border-color:#1aaa55; background:#f3fbf5; }
  input.bad{ border-color:#e53935; background:#fff5f5; }
  .ans { display:none; font-size:12px; color:#666; margin-left:6px; }
  .show .ans { display:inline; }
