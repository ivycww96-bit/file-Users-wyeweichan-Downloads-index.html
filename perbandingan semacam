<body>
<header>
  <h1>非凡教育 · Kuiz Simile Bergambar</h1>
  <div class="note">说明：看图，在输入框键入<b>小写</b>马来文答案，例如 <code>berat macam batu</code>。</div>
</header>

<div class="wrap">
  <div id="list" class="grid"></div>
</div>

<div class="btns">
  <button class="primary" id="submitBtn">检查与评分</button>
  <button class="outline" id="showBtn">显示答案</button>
  <button class="ghost" id="resetBtn">重做</button>
  <span class="score" id="scoreBox"></span>
</div>

<script>
const QUESTIONS = [
  {id:1, img:"images/1.png",  correct:["besar macam gajah"]},
  {id:2, img:"images/2.png",  correct:["panas macam api"]},
  {id:3, img:"images/3.png",  correct:["pantas macam kilat"]},
  {id:4, img:"images/4.png",  correct:["cantik macam bidadari"]},
  {id:5, img:"images/5.png",  correct:["angkuh macam merak"]},
  {id:6, img:"images/6.png",  correct:["bebas macam burung"]},
  {id:7, img:"images/7.png",  correct:["lambat macam kura-kura","lambat macam kura kura"]},
  {id:8, img:"images/8.png",  correct:["lambat macam siput"]},
  {id:9, img:"images/9.png",  correct:["cerah macam siang"]},
  {id:10,img:"images/10.png", correct:["cerdik seperti kancil","cerdik macam kancil"]}
];

const list=document.getElementById("list");
function card(q){
  const c=document.createElement("div"); c.className="card";
  c.innerHTML=`
    <div class="qnum">Soalan ${q.id}</div>
    <img src="${q.img}">
    <div class="input-row">
      <input type="text" placeholder="contoh: berat macam batu" data-id="${q.id}">
      <span class="ans">Jawapan: <b>${q.correct[0]}</b></span>
    </div>`;
  return c;
}
QUESTIONS.forEach(q=>list.appendChild(card(q)));

function norm(s){ return s.toLowerCase().replace(/[-–—]/g," ").replace(/\s+/g," ").trim(); }
function isCorrect(user, arr){ return arr.some(c=>norm(c)===norm(user)); }

document.getElementById("submitBtn").onclick=()=>{
  let score=0;
  document.querySelectorAll("input").forEach(inp=>{
    const q=QUESTIONS.find(x=>x.id==inp.dataset.id);
    if(isCorrect(inp.value,q.correct)){inp.classList.add("ok"); inp.classList.remove("bad"); score++; }
    else{ inp.classList.add("bad"); inp.classList.remove("ok"); }
  });
  document.getElementById("scoreBox").textContent="Markah: "+score+" / "+QUESTIONS.length;
};
document.getElementById("showBtn").onclick=(e)=>{
  document.querySelector(".wrap").classList.toggle("show");
  e.target.textContent=document.querySelector(".wrap").classList.contains("show")?"隐藏答案":"显示答案";
};
document.getElementById("resetBtn").onclick=()=>{
  document.getElementById("scoreBox").textContent="";
  document.querySelectorAll("input").forEach(i=>{i.value=""; i.classList.remove("ok","bad");});
  document.querySelector(".wrap").classList.remove("show");
  document.getElementById("showBtn").textContent="显示答案";
};
</script>
</body>
</html>
